@model ForumViewModel

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            Create New Forum
        </div>
    </div>
    <div class="row">
        <div id="createForumSection">
            <form asp-controller="Forum" asp-action="Create" method="post" id="createForumForm" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name">Forum Title</label>
                    <input asp-for="Name" class="form-control" placeholder="Write a Forum topic title" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" placeholder="Write a brief Forum Topic description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div id="upload">
                    <label>Upload Forum Image</label>
                    <br />
                    <label class="btn btn-default btn-file">
                        Browse <input asp-for="ImageUrl" type="file" style="display: none;" />
                    </label>
                </div>
                <br />
                <button type="submit" id="newFormBtn" class="btn btn-submitPost">Create Forum</button>
            </form>
        </div>
    </div>
</div>

