@model ProfileAllUsersModel

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            All Users
        </div>
    </div>
    <div class="row" id="forumIndexContent">
        <table class="table table-hover" id="userIndexTable">
            <thead>
                <tr>
                    <th align="center">Image</th>
                    <th align="center">Username</th>
                    <th align="center">Email</th>
                    <th align="center">Member Since</th>
                    <th align="center">Rating</th>
                </tr>
                
            </thead>
            <tbody>
                @foreach (var user in Model.Profiles)
                {
                    <tr class="userRow">
                        <td>
                            <div class="postAuthorImage" style="background-image:url(@user.ProfileImageUrl)"></div>
                        </td>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.MemeberSince</td>
                        <td>@user.UserRating</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

